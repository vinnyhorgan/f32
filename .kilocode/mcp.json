{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": { "DEFAULT_MINIMUM_TOKENS": "" },
      "alwaysAllow": ["resolve-library-id", "query-docs"]
    },
    "tauri": {
      "command": "npx",
      "args": ["-y", "@hypothesi/tauri-mcp-server"],
      "alwaysAllow": [
        "get_setup_instructions",
        "list_devices",
        "driver_session",
        "webview_find_element",
        "read_logs",
        "webview_interact",
        "webview_screenshot",
        "webview_keyboard",
        "webview_wait_for",
        "webview_get_styles",
        "webview_execute_js",
        "webview_dom_snapshot",
        "ipc_execute_command",
        "ipc_monitor",
        "ipc_get_captured",
        "ipc_emit_event",
        "ipc_get_backend_state",
        "manage_window"
      ]
    }
  }
}
