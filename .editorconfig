# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust files - 4 spaces per Rust convention
[*.rs]
indent_size = 4

# Assembly files - tabs for alignment
[*.{asm,inc}]
indent_style = tab
tab_width = 8

# Markdown - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Makefiles - require tabs
[Makefile]
indent_style = tab

# TOML files
[*.toml]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Windows batch files
[*.bat]
end_of_line = crlf
